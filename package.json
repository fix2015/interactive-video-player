    "video-player",
    "adaptive-streaming",
    "internet-speed-detection",
    "HTML5-video",
    "canvas-rendering",
    "vanilla-javascript",
    "frontend",
    "responsive-design",
    "media-player",
    "video-quality-switch",
    "async-js",
    "unit-testing",
    "jest",
    "media-handling",
    "interactive-ui"
  ],
  "author": "Semianchuk Vitalii",
  "license": "ISC",
